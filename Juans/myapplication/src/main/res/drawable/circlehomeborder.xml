<!-- button_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Outer background color -->
    <solid android:color="@android:color/transparent" />

    <!-- Border Color and Width -->
    <stroke
        android:width="2dp"
        android:color="#FF0000" /> <!-- Change color to your desired border color -->

    <!-- Rounded Corners -->
    <corners android:radius="8dp" /> <!-- Adjust the radius to control corner roundness -->

</shape>