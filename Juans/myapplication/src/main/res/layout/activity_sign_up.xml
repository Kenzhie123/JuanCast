<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackg"
    tools:context=".SignUp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="25dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity ="center"
            android:orientation= "vertical"
            android:layout_marginBottom="25dp">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="40dp"
                app:srcCompat="@drawable/communitybcrop" />

            <EditText
                android:id="@+id/email"
                android:layout_marginTop="25dp"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:background="@drawable/whitebackground"
                android:hint="Email"
                android:singleLine="true"
                android:fontFamily="@font/montserrat_regular"
                android:padding="15dp"
                android:textColor="#9C5C5F61"
                android:textColorHint="#9C5C5F61"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/number"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/whitebackground"
                android:hint="Number"
                android:singleLine="true"
                android:fontFamily="@font/montserrat_regular"
                android:padding="15dp"
                android:textColor="#9C5C5F61"
                android:textColorHint="#9C5C5F61"
                android:textSize="14sp" />



            <EditText
                android:id="@+id/fullname"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/whitebackground"
                android:hint="Full Name"
                android:singleLine="true"
                android:fontFamily="@font/montserrat_regular"
                android:padding="15dp"
                android:textColor="#9C5C5F61"
                android:textColorHint="#9C5C5F61"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/username"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/whitebackground"
                android:hint="Username"
                android:singleLine="true"
                android:fontFamily="@font/montserrat_regular"
                android:padding="15dp"
                android:textColor="#9C5C5F61"
                android:textColorHint="#9C5C5F61"
                android:textSize="14sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_input_layout"
                android:layout_marginTop="-5dp"
                android:layout_width="wrap_content"
                android:textColor="#9C5C5F61"
                android:textColorHint="#9C5C5F61"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="288dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/whitebackground"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="Enter your password..."
                    android:inputType="textPassword"
                    android:textColor="#9C5C5F61"
                    android:maxLength="20"
                    android:padding="15dp"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confirm_input_layout"
                android:layout_marginTop="-5dp"
                android:layout_width="wrap_content"
                android:textColor="#9C5C5F61"
                android:textColorHint="#9C5C5F61"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password_confirm"

                    android:layout_width="288dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Confirm your password..."
                    android:textColor="#9C5C5F61"
                    android:fontFamily="@font/montserrat_regular"
                    android:background="@drawable/whitebackground"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:padding="15dp"
                    android:textSize="14sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/password_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Passwords do not match."
                android:fontFamily="@font/montserrat_regular"
                android:textColor="#FF0000"
                android:textSize="12dp"
                android:visibility="gone"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/birthdate"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/whitebackground"
                android:hint="Birthdate (MM/DD/YYYY)"
                android:fontFamily="@font/montserrat_regular"
                android:padding="15dp"
                android:textColor="#9C5C5F61"
                android:textColorHint="#9C5C5F61"
                android:textSize="14sp"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none" />

            <RadioGroup
                android:layout_marginTop="5dp"
                android:id="@+id/genderGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/rbMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Male"
                    android:theme="@style/MycheckBox"
                    android:fontFamily="@font/montserrat_regular"/>

                <CheckBox
                    android:id="@+id/rbFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Female"
                    android:theme="@style/MycheckBox"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/montserrat_regular"/>
            </RadioGroup>

            <Button
                android:id="@+id/SignupBtn"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:text="SignUp"
                android:fontFamily="@font/montserrat_regular"
                android:backgroundTint="@color/white"
                android:textColor="#3B84F1"
                android:padding="8dp"
                android:layout_marginTop="15dp"
                android:textSize="14sp"/>


            <TextView
                android:layout_width="270dp"
                android:gravity="start"
                android:layout_height="wrap_content"
                android:text="Terms and Conditions"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:gravity="start"
                    android:id="@+id/terms"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:theme="@style/MycheckBox"
                    android:fontFamily="@font/montserrat_regular"/>

                <TextView
                    android:id="@+id/termsTextView"
                    android:layout_width="260dp"
                    android:gravity="start"
                    android:layout_height="wrap_content"
                    android:text="I certify that I have read and accept the Terms of Use and Privacy Statement and I have read and understand the Rate Description and Rate Rules for my reservation."
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="12sp"
                    android:layout_marginBottom="10dp"/>



            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Have an account?"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/LogIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LogIn "
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="We need permission for the service you use"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="3dp"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="14sp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
    <TextView
        android:id="@+id/learnMORE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learn More"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="16sp"
        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   |   "
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/Datapolicy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Policy"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="16sp"
        />



</LinearLayout>



        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvVerifyEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A verification email has been sent to your email address. Please verify before logging in."
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="12sp"
        android:padding="15dp"
        android:gravity="center"
        android:visibility="gone" />
</RelativeLayout>
