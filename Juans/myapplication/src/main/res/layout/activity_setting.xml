<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/juans"
    tools:context=".Setting">


    <LinearLayout
        android:id="@+id/navtop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_marginStart="15dp"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Settings"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end">

            <ImageView
                android:id="@+id/back"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/cross" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/about1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            >


            <ImageView
                android:id="@+id/about2"
                android:layout_marginStart="15dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/circlebutton"
                android:src="@drawable/question"
                android:scaleType="centerInside"
                android:padding="5dp"
                app:tint="@color/white"
                android:layout_gravity="center"/>


            <TextView
                android:id="@+id/about3"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:fontFamily="@font/montserrat_bold"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="18dp"/>

            <LinearLayout
                android:id="@+id/about4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end">




                <ImageView
                    android:id="@+id/about5"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/right"
                    app:tint="@color/white" />



            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/Terms"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/about1"
            tools:ignore="MissingConstraints">


            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:background="@drawable/circlebutton"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/mark"
                app:tint="@color/white" />


            <TextView
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms &amp; Conditions"
                android:fontFamily="@font/montserrat_bold"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="18dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end">




                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/right"
                    app:tint="@color/white" />


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/privacy1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/Terms">


            <ImageView
                android:id="@+id/privacy2"
                android:layout_marginStart="15dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/circlebutton"
                android:src="@drawable/baseline_lock_24"
                android:scaleType="centerInside"
                android:padding="5dp"
                app:tint="@color/white"
                android:layout_gravity="center"/>


            <TextView
                android:id="@+id/privacy3"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:fontFamily="@font/montserrat_bold"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="18dp"/>

            <LinearLayout
                android:id="@+id/privacy4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end">




                <ImageView
                    android:id="@+id/privacy5"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/right"
                    app:tint="@color/white" />


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/rate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/privacy1">


            <ImageView
                android:layout_marginStart="15dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/circlebutton"
                android:src="@drawable/baseline_star_24"
                android:scaleType="centerInside"
                android:padding="5dp"
                app:tint="@color/white"
                android:layout_gravity="center"/>


            <TextView
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate This App"
                android:fontFamily="@font/montserrat_bold"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="18dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end">




                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/right"
                    app:tint="@color/white" />

            </LinearLayout>

        </LinearLayout>





        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/rate">


            <ImageView
                android:layout_marginStart="15dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/circlebutton"
                android:src="@drawable/baseline_share_24"
                android:scaleType="centerInside"
                android:padding="5dp"
                app:tint="@color/white"
                android:layout_gravity="center"/>


            <TextView
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share This App"
                android:fontFamily="@font/montserrat_bold"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="18dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end">




                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/right"
                    app:tint="@color/white" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/deactivateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DEACTIVATE ACCOUNT"
            android:textColor="@color/white"
            android:backgroundTint="#FF0000"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginTop="250dp" />

    </LinearLayout>


    <LinearLayout

        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.2"
            android:gravity="center">


            <ImageView
                android:id="@+id/home"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="-1dp"
                android:src="@drawable/homenav"
                app:tint="@color/black" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.2"
            android:gravity="center">


            <ImageView
                android:id="@+id/Cast"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/casttnav"
                app:tint="@color/black" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.2"

            android:gravity="center">


            <ImageView
                android:id="@+id/Community"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/communitynav"

                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.2"
            android:gravity="center">


            <ImageView
                android:id="@+id/Store"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="-1dp"
                android:src="@drawable/storenav"
                app:tint="@color/black" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.2"
            android:gravity="center">


            <ImageView
                android:id="@+id/profile"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/baseline_person_pin_24"
                />
        </RelativeLayout>

    </LinearLayout>


  </androidx.constraintlayout.widget.ConstraintLayout>