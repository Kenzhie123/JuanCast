<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/whitebackground"
    android:padding="16dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:id="@+id/post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="#22000000"
                android:scaleType="centerCrop"
                app:civ_border_color="#2196F3"
                app:civ_border_width="3dp" />

            <ProgressBar
                android:id="@+id/profileImageProgressBar"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:indeterminateTint="#2196F3"
                android:indeterminate="true"
                android:layout_gravity="center" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/welcomeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/black"
                android:text="Username"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/postTimestampTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Just now"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@android:color/black"
                android:id="@+id/postContentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Post content"
                android:textSize="14sp"
                android:maxLines="3"
                android:ellipsize="end"
                android:clickable="true"
                android:focusable="true"
                android:onClick="togglePostContent"
                android:paddingEnd="8dp" />

            <TextView
                android:id="@+id/seeMoreTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="See more"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/postContentTextView"
                app:layout_constraintTop_toBottomOf="@+id/postContentTextView" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <ImageButton
            android:id="@+id/likeImageView"
            android:background="#00FFFFFF"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_favorite_border_24" />

        <TextView
            android:id="@+id/likesCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="4dp"
            android:drawablePadding="4dp"
            android:text="0"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
